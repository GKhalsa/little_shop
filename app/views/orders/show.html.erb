<h4 class="order-for">Order #<%= @order.id %> created at <%= @order.created_at %></h4>

<table class="highlight">
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Cost</th>
    </tr>
    <% @order.order_items.each do |order_item|%>
    <tr>
      <td><%= order_item.title %></td>
      <td><%= order_item.quantity %></td>
      <td><%= order_item.total %></td>
    </tr>
    <% end %>
    <tr>
      <td>Order Status: <%= @order.status %></td>
      <td>Last Updated: <%= @order.updated_at %></td>
      <td>Total: <%= @order.total %></td>
    </tr>
</table>
