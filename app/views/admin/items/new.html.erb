<h5>Create a new item</h5>
<%= form_for([:admin, @item], multipart: true) do |f| %>
  <div class="input-field">
  <%= f.label :category %>
  <%= f.select (:category_id, [1, 2]) %>
  </div>
  <div class="input-field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="input-field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div class="input-field">
    <%= f.label :description %>
    <%= f.text_area :description, class: "materialize-textarea" %>
  </div>
  <div class="input-field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "waves-effect waves-light btn" %>
  </div>
  <div class="center">
    <%= f.submit "Create Item", class: "waves-effect waves-light btn" %>
  </div>
<% end %>
