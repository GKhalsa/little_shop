<h4 class="admin-items">All Items</h4>

<table class="highlight">
    <tr>
      <th>id</th>
      <th>Title</th>
      <th>Price</th>
      <th>Updated at</th>
      <th></th>
    </tr>
    <% @items.each do |item|%>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.title %></td>
      <td><%= item.price %></td>
      <td><%= item.updated_at %></td>
      <td><%= button_to_change_item_state(item) %></td>
    </tr>
  <% end %>
</table>
