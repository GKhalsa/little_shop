<h4 class="admin-items">All Items</h4>

<table class="highlight">
    <tr>
      <th>id</th>
      <th>Title</th>
      <th>Price</th>
      <th>Updated at</th>
      <th></th>
    </tr>
    <% @items.each do |item|%>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.title %></td>
      <td><%= item.price %></td>
      <td><%= item.updated_at %></td>
      <td><%= link_to "Retire",
              admin_retire_path(item), 
              method: :patch,
              class: "waves-effect waves-light btn" %></td>
    </tr>
  <% end %>
</table>
