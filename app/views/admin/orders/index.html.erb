<h4 class="admin-orders">Orders by Status</h4>

<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3 all-tab"><a class="active" href="#all">All <%= @orders.count %></a></li>
      <li class="tab col s3 ordered-tab"><a href="#ordered">Ordered <%= @orders.ordered.count %></a></li>
      <li class="tab col s3 completed-tab"><a href="#completed">Completed <%= @orders.completed.count %></a></li>
      <li class="tab col s3 paid-tab"><a href="#paid">Paid <%= @orders.paid.count %></a></li>
      <li class="tab col s3 cancelled-tab"><a href="#cancelled">Cancelled <%= @orders.cancelled.count %></a></li>
    </ul>
  </div>
  <div id="all" class="col s12">
    <%= render partial: "partials/orders_by_status", locals: { orders: @orders } %></div>
  <div id="ordered" class="col s12">  <%= render partial: "partials/orders_by_status", locals: { orders: @orders.ordered } %></div>
  <div id="completed" class="col s12">  <%= render partial: "partials/orders_by_status", locals: { orders: @orders.completed } %></div>
  <div id="paid" class="col s12">  <%= render partial: "partials/orders_by_status", locals: { orders: @orders.paid } %></div>
  <div id="cancelled" class="col s12">  <%= render partial: "partials/orders_by_status", locals: { orders: @orders.cancelled } %></div>
</div>
